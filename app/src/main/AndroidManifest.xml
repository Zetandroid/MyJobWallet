<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kubix.myjobwallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!-- LOGIN FACEBOOK -->
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>


        <activity
            android:name=".IntroduzioneActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/toolbarSettings"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- IMPOSTAZIONI -->
        <activity
            android:name=".setting.SettingsActivity"
            android:label="@string/toolbarSettings"
            android:theme="@style/ThemeImpostazioni" />

        <!-- PROFILO -->
        <activity
            android:name=".profilo.ProfiloActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/toolbarProfile" />

        <activity
            android:name=".profilo.ProfiloDatiActivity"
            android:label="@string/toolbarProfileDati"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- SPESA -->
        <activity
            android:name=".spese.SpeseActivity"
            android:label="@string/toolbarSpese"
            android:theme="@style/ThemeSpesa" />
        <activity
            android:name=".spese.SpeseAggiungiActivity"
            android:label="@string/toolbarSpeseAggiungi"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ThemeSpesa" />

        <!-- MEMO -->
        <activity
            android:name=".note.NoteActivity"
            android:theme="@style/ThemeMemo" />
        <activity
            android:name=".note.NoteAggiungiActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/toolbarNoteAggiungi"
            android:theme="@style/ThemeMemo" />

        <!-- CALENDARIO/ORE -->
        <activity
            android:name=".calendario.CalendarioActivity"
            android:label="@string/toolbarCalendario"
            android:theme="@style/ThemeOre" />

        <!-- TURNI -->
        <activity
            android:name=".calendario.ElaborazioniActivity"
            android:label="@string/toolbarCalcoloPaga"
            android:theme="@style/ThemeTurni" />

        <activity
            android:name=".calendario.TurniActivity"
            android:label="@string/toolbarTurni"
            android:theme="@style/ThemeTurni" />

        <!-- PREMIUM -->
        <activity
            android:name="com.kubix.myjobwallet.utility.PremiumActivity"
            android:label="@string/toolbarPremium"
            android:theme="@style/ThemePremium" />

        <!-- ENTRATE -->
        <activity
            android:name=".entrate.EntrateActivity"
            android:label="@string/toolbarEntrate"
            android:theme="@style/ThemeEntrate" />

        <activity android:name=".entrate.EntrateAggiungiActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/toolbarEntrateAggiungi"
            android:theme="@style/ThemeEntrate"/>

        <!-- CONVERTITORE -->
        <activity
            android:name=".ConvertitoreActivity"
            android:label="@string/toolbarValuta"
            android:theme="@style/ThemeValuta" />

        <!-- EMAIL -->
        <activity android:name="com.kubix.myjobwallet.utility.EmailActivity"
            android:label="@string/toolbarEmail"
            android:theme="@style/ThemeEmail."/>

        <!-- FACEBOOK -->
        <activity android:name="com.kubix.myjobwallet.profilo.FacebookLogin"
            android:label="@string/toolbarEmail"
            android:theme="@style/ThemeEmail."/>



        <!-- INFO STAFF -->
        <activity android:name=".utility.InfoActivity"
            android:theme="@style/ThemeProfilo"/>


        <!-- WIDGET -->
        <receiver android:name=".widget.WidgetOne">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_1"/>
        </receiver>

    </application>



</manifest>