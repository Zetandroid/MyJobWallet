<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- TEMA PROFILO -->
    <style name="ThemeProfilo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryProfilo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkProfilo</item>
        <item name="colorAccent">@color/colorAccentProfilo</item>
    </style>

    <!-- TEMA ORE -->
    <style name="ThemeOre" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryOre</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOre</item>
        <item name="colorAccent">@color/colorAccentOre</item>
    </style>

    <!-- TEMA Turni -->
    <style name="ThemeTurni" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryTurni</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTurni</item>
        <item name="colorAccent">@color/colorAccentTurni</item>
    </style>

    <!-- TEMA SPESA -->
    <style name="ThemeSpesa" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimarySpesa</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSpesa</item>
        <item name="colorAccent">@color/colorAccentSpesa</item>
    </style>

    <!-- TEMA MEMO -->
    <style name="ThemeMemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryMemo</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMemo</item>
        <item name="colorAccent">@color/colorAccentMemo</item>
    </style>

    <!-- TEMA PREMIUM -->
    <style name="ThemePremium" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryPremium</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPremium</item>
        <item name="colorAccent">@color/colorAccentPremium</item>
    </style>

    <!-- TEMA IMPOSTAZIONI -->
    <style name="ThemeImpostazioni" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryImpostazioni</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkImpostazioni</item>
        <item name="colorAccent">@color/colorAccentImpostazioni</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- BOTTONI -->
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/testoTitolo</item>
        <item name="colorAccent">@color/testoTitolo</item>
    </style>
</resources>
