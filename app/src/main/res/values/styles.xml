    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- BOTTONI -->

    <style name="Bottone.Rosso" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimarySpesa</item>
        <item name="android:textColor">@color/coloreBianco</item>
    </style>

    <style name="Bottone.Blu" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryTurni</item>
