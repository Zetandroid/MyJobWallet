<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:elevation="http://schemas.android.com/aapt">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccentSpesa"  />
            <corners android:radius="90dp" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccentSpesa" />
            <corners android:radius="90dp" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDarkSpesa" />
            <corners android:radius="90dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimarySpesa" />
            <corners android:radius="90dp" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
        </shape>
    </item>

</selector>