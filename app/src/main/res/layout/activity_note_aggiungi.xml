<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".note.NoteAggiungiActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAggiungiNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/aggiungiCopertina"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription=""
        app:srcCompat="@color/colorPrimary"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tastoSalvaNota"
        android:layout_below="@+id/aggiungiCopertina">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/testoTitoloSpesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coloreLineaTrasparente"
                android:ems="10"
                android:hint="TITOLO NOTA"
                android:inputType="textMultiLine"
                android:padding="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/coloreIcone" />

            <EditText
                android:id="@+id/testoNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coloreLineaTrasparente"
                android:ems="10"
                android:hint="Scrivi qui la tua nota..."
                android:inputType="textMultiLine"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/tastoSalvaNota"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription=""
        android:onClick="scriviNotaInDB"
        app:srcCompat="@color/colorPrimary"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textSalvaNota"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="SALVA NOTA"
        android:textColor="@color/coloreTestoBianco"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>