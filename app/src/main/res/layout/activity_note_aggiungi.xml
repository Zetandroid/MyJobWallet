<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteAggiungiActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAggiungiNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarAggiungiNota"
        android:layout_above="@+id/tastoSalvaNota">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/aggiungiCopertina"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@color/colorPrimaryMemo" />

            <EditText
                android:id="@+id/testoTitoloSpesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aggiungiCopertina"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:background="@color/colorLineText"
                android:hint="TITOLO"
                android:inputType="textMultiLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/testoNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/testoTitoloSpesa"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:background="@color/colorLineText"
                android:hint="NOTA"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/tastoSalvaNota"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="scriviNotaInDB"
        app:srcCompat="@color/colorPrimaryMemo" />

    <TextView
        android:id="@+id/textSalvaNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Salva"
        android:textColor="@color/lightText"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>