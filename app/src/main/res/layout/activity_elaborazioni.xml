<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardCalcoloStraordinari"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="34dp"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/immagineCalcoloStraordinari"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="Calcolo straordinari"
            android:textAlignment="center"
            android:textColor="@color/darkText"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardCalcoloPaga"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignTop="@+id/cardCalcoloStraordinari"
        android:layout_toEndOf="@+id/cardCalcoloStraordinari"
        android:layout_marginStart="22dp">

        <ImageView
            android:id="@+id/immagineCalcoloPaga"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="Calcolo paga"
            android:textAlignment="center"
            android:textColor="@color/darkText"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <Spinner
        android:id="@+id/spinner"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>