<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/linearDatiSpesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/linearTitolo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorBiancoScuro"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/testoGiornoGiornoSpesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Mar"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/coloreTestoNero"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/testoNumeroGiornoSpese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="18"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/coloreTestoNero"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/testoMeseSpese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Ott"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/coloreTestoNero"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/testoAnnoSpese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="2017"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/coloreTestoNero"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtTitoloSpesa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="72dp"
                    android:padding="4dp"
                    android:text="Titolo"
                    android:textAlignment="textStart"
                    android:textAppearance="@android:style/TextAppearance.Material.Title"
                    android:textColor="@color/coloreTestoNero"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <ImageView
                    android:id="@+id/iconaTagUscite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/ic_btnsheet_spese_svago"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtSpesa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="200,00 â‚¬"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@color/coloreSommarioNero"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgNotificaSpese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/ic_icona_notifica"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    android:id="@+id/txtPromemoriaUsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:text="Ora notifica"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@color/coloreSommarioNero"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtDataSpesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:text="15 Ottobre 2017"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textColor="@color/coloreSommarioNero"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText,RtlHardcoded"
                    tools:text="Data notifica" />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>