<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".calendario.TurniActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.milosoftware.myjob.StoricoTurni">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarTurni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryTurni"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/toolbarTurni">

            <com.google.android.gms.ads.NativeExpressAdView
                android:id="@+id/adViewTurni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="360x132"
                ads:adUnitId="@string/adsTurni" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listaTurni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView"
                android:layout_alignEnd="@+id/bottom_sheet"
                android:layout_marginBottom="103dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@color/colorPrimaryTurni"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/bottom_sheet"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="48dp"
            ads:srcCompat="@drawable/ic_btn_eloborazioni" />


    </RelativeLayout>

</ScrollView>



