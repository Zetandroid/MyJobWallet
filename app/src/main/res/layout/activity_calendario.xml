<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:onClick="apriStorico"
        app:srcCompat="@color/colorPrimaryOre" />

    <TextView
        android:id="@+id/bottoneElencoTurni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Elenco Turni"
        android:textColor="@color/coloreBianco"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarOrologio"
        android:layout_marginBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/iconeLayout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextOraEntrata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:background="@color/lineaTrasparente"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Inserisci Entrata"
                    android:inputType="time"
                    android:onClick="dialogTimePickerClickEntrata" />

                <Button
                    android:id="@+id/bottoneEntrata"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bottone_facebook"
                    android:onClick="inserisciEntrataTurno"
                    android:stateListAnimator="@null"
                    android:text="@string/salva"
                    android:textColor="@color/coloreBianco" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/iconeLayout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextOraUscita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:background="@color/lineaTrasparente"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Inserisci Uscita"
                    android:inputType="time"
                    android:onClick="dialogTimePickerClickUscita" />

                <Button
                    android:id="@+id/bottoneUscita"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bottone_google_plus"
                    android:onClick="inserisciUscitaTurno"
                    android:stateListAnimator="@null"
                    android:text="@string/salva"
                    android:textColor="@color/coloreBianco" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/iconeLayout" />

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarOrologio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryOre"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

</RelativeLayout>