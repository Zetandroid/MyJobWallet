<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="apriStorico"
        android:layout_alignParentStart="true"
        android:text="TUTTI I TURNI" />

    <Button
        android:id="@+id/buttonUscita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true"
        android:onClick="inserisciUscitaTurno"
        android:layout_alignParentStart="true"
        android:text="INSERISCI USCITA" />

    <Button
        android:id="@+id/buttonEntrata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonUscita"
        android:layout_alignParentEnd="true"
        android:onClick="inserisciEntrataTurno"
        android:layout_alignParentStart="true"
        android:text="INSERISCI ENTRATA" />

    <TimePicker
        android:id="@+id/timePicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/buttonEntrata" />
</RelativeLayout>