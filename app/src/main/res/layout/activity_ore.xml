<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.milosoftware.myjob.Main"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/buttonEntrata"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:layout_below="@+id/timePicker2"
            android:onClick="inserisciEntrataTurno"
            android:text="INSERISCI ENTRATA"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="347dp"
            android:layout_alignStart="@+id/buttonUscita"
            android:layout_alignEnd="@+id/buttonUscita" />

        <Button
            android:id="@+id/buttonUscita"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:onClick="inserisciUscitaTurno"
            android:text="INSERISCI USCITA"
            app:layout_constraintTop_toBottomOf="@+id/buttonEntrata"
            tools:layout_editor_absoluteX="8dp"
            android:layout_below="@+id/buttonEntrata"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button5"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:onClick="apriStorico"
            android:text="TUTTI I TURNI"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="447dp"
            android:layout_below="@+id/buttonUscita"
            android:layout_alignStart="@+id/buttonUscita" />

        <TimePicker
            android:id="@+id/timePicker2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-2dp"
            android:timePickerMode="spinner"
            android:layout_below="@+id/datePicker"
            android:layout_alignStart="@+id/buttonEntrata"
            android:layout_alignEnd="@+id/buttonEntrata" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>