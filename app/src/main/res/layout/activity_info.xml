<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/cardMorgan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgMorgan"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_immagine_morgan"
                            app:civ_border_color="@color/place_autocomplete_separator"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/nomeMorgan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="4dp"
                            android:text="Morgan Ciancio"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/presentazioneMorgan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:paddingBottom="4dp"
                            android:paddingTop="2dp"
                            android:text="DEVELOPER / GRAPHIC DESIGN"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/coloreIcone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/googleMorgan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Google Plus"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorPrimarySpesa"
                                android:textSize="12sp"
                                android:theme="@style/BottoneFlatRosso"
                                tools:ignore="DuplicateIds,ObsoleteLayoutParam" />

                            <Button
                                android:id="@+id/twitterMorgan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_toEndOf="@+id/googleUno"
                                android:layout_weight="1"
                                android:text="Twitter"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorPrimarySpesa"
                                android:textSize="12sp"
                                android:theme="@style/BottoneFlatRosso"
                                tools:ignore="ObsoleteLayoutParam" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardAlessio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAlessio"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_immagine_alessio"
                            app:civ_border_color="@color/coloreTestoNero"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/nomeAlessio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="4dp"
                            android:text="Alessio Boe"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/presentazioneAlessio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:paddingBottom="4dp"
                            android:paddingTop="2dp"
                            android:text="DEVELOPER "
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/coloreIcone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/googleAlessio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Google Plus"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorPrimarySpesa"
                                android:textSize="12sp"
                                android:theme="@style/BottoneFlatRosso"
                                tools:ignore="DuplicateIds,ObsoleteLayoutParam" />

                            <Button
                                android:id="@+id/twitterAlessio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_toEndOf="@+id/googleUno"
                                android:layout_weight="1"
                                android:text="Twitter"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorPrimarySpesa"
                                android:textSize="12sp"
                                android:theme="@style/BottoneFlatRosso" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>